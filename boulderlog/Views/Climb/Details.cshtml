@model ClimbViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model)
        </dt>
        <dd class = "col-sm-10">
            <img src="/api/images/@Model.ImageId" alt="Boulder Image" width="250" height="250" class="ps-1" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class="col-sm-10">
            <div class="row ps-3">
                @if (Model.Gym == "TheClimb-B-Hongdae")
                {
                    <div class="col-3" style="display:inline-block;width:20px;height:20px;">@Model.Grade</div>
                }
                else
                {
                    <div class="col-3" style="display:inline-block;width:20px;height:20px;background-color:@Model.GradeColor;"></div>
                }

                @if (Model.HoldColor == "Mint")
                {
                    <div class="col-3" style="display:inline-block;width:20px;height:20px;background-color:#3EB489;"></div>
                }
                else
                {
                    <div class="col-3" style="display:inline-block;width:20px;height:20px;background-color:@Model.HoldColor;"></div>
                }
                <div class="col-6">(Hold)</div>
            </div>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gym)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wall)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wall)
        </dd>
    </dl>
    <h3>Climb logs</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Timestamp
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ClimbLogs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeStamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a class="btn btn-dark" asp-action="Delete" asp-controller="ClimbLog" asp-route-id="@item.Id" alt="delete">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash p-0 m-0 pb-1" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>